<apex:page controller="OffsetController">
    <apex:form>
        <apex:pageBlock title="Offset Details">
            <apex:pageBlockSection columns="2">
                <apex:inputField value="{!offset.Type__c}"/>
                <apex:inputField value="{!offset.Amount__c}"/>
                <apex:inputField value="{!offset.Provider__c}"/>
                <apex:inputField value="{!offset.Date__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons>
                <apex:commandButton action="{!saveOffset}" value="Save"/>
                <apex:commandButton action="{!cancel}" value="Cancel"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>
